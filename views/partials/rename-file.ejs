<dialog id="<%= locals.errors ? "error-rename-file" : "rename-file" %>">
  <form action="<%= `/${folder?.id}/rename-folder` %>" method="post">
    <h4>Rename folder</h4>
    <%- include("errors.ejs") %>
    <div>
      <label for="folderName">Enter a new folder name:</label>
      <input type="text" name="folderName" id="folderName" required>
    </div>
    <div>
      <button formmethod="dialog" formnovalidate>Cancel</button>
      <button>Rename</button>
    </div>
  </form>
</dialog>