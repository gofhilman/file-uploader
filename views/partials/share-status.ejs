<dialog id="<%= locals.copy ? "copy-share-status" : "share-status" %>">
  <h3 class="title-margin">Share status</h3>
  <div class="grid-data">
    <p>Folder name:</p>
    <p><%= folder?.name %></p>
    <p>Status:</p>
    <% if (!folder?.shared || folder.shared.expiresAt < new Date()) { %>
    <p>Private</p>
    <% } else { %>
    <p>Shared</p>
    <p>Shareable link:</p>
    <div>
      <p id="link"><%= url %></p>
      <button id="copy-link"><span id="copy-status">Copy link</span></button>
    </div>
    <p>Valid until <%= folder?.shared.expiresAt %></p>
    <% } %>
  </div>
  <form action="<%= `/${folder?.id}/share-folder` %>" method="post">
    <div class="form-body">
      <label for="share">Share this folder?</label>
      <select name="share" id="share">
        <option value="">Select an option</option>
        <option value="0">No</option>
        <option value="1">Yes, for 1 day</option>
        <option value="7">Yes, for 1 week</option>
        <option value="14">Yes, for 2 weeks</option>
        <option value="30">Yes, for 1 month</option>
      </select>
    </div>
    <div class="dialog-buttons">
      <button formmethod="dialog" formnovalidate>Close</button>
      <button>Apply</button>
    </div>
  </form>
</dialog>
