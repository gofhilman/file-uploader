generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  folders  Folder[]
  files    File[]
  shares   Shared[]
}

model Folder {
  id           String   @id @default(uuid())
  name         String
  parentId     String?
  parent       Folder?  @relation("ParentChildren", fields: [parentId], references: [id], onDelete: Cascade)
  childFolders Folder[] @relation("ParentChildren")
  files        File[]
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  shared       Shared?

  @@unique([name, parentId, userId])
}

model File {
  id         String   @id @default(uuid())
  name       String
  url        String
  size       BigInt
  uploadedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  folder     Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  folderId   String

  @@unique([name, folderId, userId])
}

model Shared {
  id        String   @id @default(uuid())
  folder    Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
  folderId  String   @unique
  createdAt DateTime 
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
